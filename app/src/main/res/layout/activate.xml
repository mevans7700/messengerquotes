   <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/EditText_Email" android:maxLines="1" android:inputType="textEmailAddress" android:textColor="@android:color/black"></EditText>
   
   
  </LinearLayout>
